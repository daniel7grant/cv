<li class="project-card">
	<div class="project-cover">
		<img src="/{{cover}}" alt="{{name}}">
		{{#if url}}
		<a class="to-url" href="{{url}}" target="_blank">
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 283.922 283.922" width="512" height="512"><g fill="#FFF"><path d="M266.422 0h-97.625c-9.65 0-17.5 7.851-17.5 17.5 0 9.649 7.85 17.5 17.5 17.5h55.377l-92.375 92.374a17.378 17.378 0 0 0-5.127 12.375c0 4.676 1.819 9.069 5.125 12.371a17.374 17.374 0 0 0 12.375 5.13c4.674 0 9.069-1.82 12.376-5.127l92.374-92.375v55.377c0 9.649 7.851 17.5 17.5 17.5 9.649 0 17.5-7.851 17.5-17.5V17.5c0-9.649-7.851-17.5-17.5-17.5z"/><path d="M201.137 253.922H30V82.785h128.711l30-30H15c-8.284 0-15 6.716-15 15v201.137c0 8.284 6.716 15 15 15h201.137c8.284 0 15-6.716 15-15V95.211l-30 30v128.711z"/></g></svg>
		</a>
		{{/if}}
	</div>
	<div class="project-details">
		<h3>{{name}}</h3>
		<span class="project-client">for <a href="{{client.url}}" target="_blank">{{client.name}}</a></span>
		<ul class="project-details-list">
			{{#each details}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
		<ul class="project-langs">
			{{#each languages}}
			<li>
				<img class="icon" src="/icons/{{icon}}" alt="{{name}}" title="{{name}}" />
				<div>{{name}}</div>
			</li>
			{{/each}}
		</ul>
		{{#if url}}
		<a class="to-url" href="{{url}}" target="_blank">
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 283.922 283.922" width="512" height="512"><g fill="#FFF"><path d="M266.422 0h-97.625c-9.65 0-17.5 7.851-17.5 17.5 0 9.649 7.85 17.5 17.5 17.5h55.377l-92.375 92.374a17.378 17.378 0 0 0-5.127 12.375c0 4.676 1.819 9.069 5.125 12.371a17.374 17.374 0 0 0 12.375 5.13c4.674 0 9.069-1.82 12.376-5.127l92.374-92.375v55.377c0 9.649 7.851 17.5 17.5 17.5 9.649 0 17.5-7.851 17.5-17.5V17.5c0-9.649-7.851-17.5-17.5-17.5z"/><path d="M201.137 253.922H30V82.785h128.711l30-30H15c-8.284 0-15 6.716-15 15v201.137c0 8.284 6.716 15 15 15h201.137c8.284 0 15-6.716 15-15V95.211l-30 30v128.711z"/></g></svg>
		</a>
		{{/if}}
	</div>
</li>
